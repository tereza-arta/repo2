def gv

pipeline{
    agent any
    environment { 
        GIT_LOG = sh(
                    script: "git log --merges --first-parent origin/main",
                    returnStdout: true
                ).trim() 
    }
    stages {
        stage('Init') {
            steps {
                script {
                        gv = load "script.groovy"
                }
            }
        }
        stage('Check') {
            steps {
                script {
                    gv.function()
                }
            }
        }
        stage('Test') {
            steps {
                echo "Testing the ptoject..."
            }
        }
    }
}
